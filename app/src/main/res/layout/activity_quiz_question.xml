<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".QuizQuestionActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/progressBarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:visibility="gone">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible"
            android:paddingTop="20dp"
            android:paddingHorizontal="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="4dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="0"
                    android:progress="0"
                    style="?android:progressBarStyleHorizontal" />

                <TextView
                    android:id="@+id/tvProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1/10"
                    android:textSize="20sp"
                    android:paddingStart="20dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvQuestionType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Single Choice"
                android:paddingVertical="10dp"
                android:gravity="center"
                android:textColor="#989898"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="How do you call the parent constructor?"
                android:gravity="center"
                android:textSize="24sp"
                android:layout_marginBottom="40dp"/>

            <TextView
                android:id="@+id/tvOptionOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_option_border_bg"
                tools:text="option 1"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="#7A8089"
                android:layout_marginVertical="10dp"/>
            <TextView
                android:id="@+id/tvOptionTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_option_border_bg"
                tools:text="option 2"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="#7A8089"
                android:layout_marginVertical="10dp"/>
            <TextView
                android:id="@+id/tvOptionThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_option_border_bg"
                tools:text="option 3"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="#7A8089"
                android:layout_marginVertical="10dp"/>
            <TextView
                android:id="@+id/tvOptionFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_option_border_bg"
                tools:text="option 4"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="#7A8089"
                android:layout_marginVertical="10dp"/>
            <TextView
                android:id="@+id/tvOptionFive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_option_border_bg"
                tools:text="option 5"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="#7A8089"
                android:layout_marginVertical="10dp"/>
            <TextView
                android:id="@+id/tvOptionSix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_option_border_bg"
                tools:text="option 6"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="#7A8089"
                android:layout_marginVertical="10dp"/>
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/design_default_color_primary"
                android:layout_marginTop="10dp"
                android:text="SUBMIT"/>
        </LinearLayout>
    </LinearLayout>


</ScrollView>